{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"check": { "dependsOn": ["^check"] },
		"dev": { "cache": false, "persistent": true },
		"build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
		"preview": { "cache": false, "persistent": true, "dependsOn": ["^build"] },
		"format": {}
	}
}
